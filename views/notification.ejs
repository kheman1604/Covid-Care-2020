<html>
    <head>
        <link rel="stylesheet" href="/css/noti.css">
        
    </head>

    <body onload="gettext()">
        <nav>
            
            <ul>
                <li style="margin-left: 11%; text-transform: uppercase; color: #2c365d; font-weight: bolder;float: left;font-size: x-large;"><a href="/">COVID CARE</a></li>
                <div style="float: right;margin-right: 13%;">
                    <li><a href="/hosdash">Beds</a></li>
                    <li><a href="/notification">Notifications</a></li>
                    <li><a href="/contact">Helpline</a></li>
                    <li><a href="/dash">Dashboard</a></li>
                    <li><a href="/analytics">Analytics</a></li>
                    <% if(!currentUser){ %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup">Signup</a></li>
                    <%	} else { %>
                    <li><a href="/logout">Logout</a></li>
                    <%	} %>	
                </div>
               
            </ul>
        </nav>
        <br>

        <div class="container">
            <h1>Notifications & advisories</h1>
           
            <div id='table' class="table">

            </div>
    
        </div>

    </body>
</html>
<script>
     function gettext(){
        fetch("https://api.rootnet.in/covid19-in/notifications")
        .then(function(res){
          return res.json();
        })
        .then(function(data){
            var x="";
            data.data.notifications.forEach(noti => {
                x+="<tr><td class='left'>"+noti.title+"</td><td class='right'><a href='"+noti.link+"'>Redirect</a></td></tr>"
                
            });
            x="<table><tr><th>Title</th><th>Link</th></tr>"+x+"</table>"
            document.getElementById('table').innerHTML=x;
        })
    }
</script>
